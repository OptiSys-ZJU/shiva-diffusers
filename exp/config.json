{
    "data_root": "../dataset/philharmonia",
    "output_dir": "output_ssa_exp",
    "pretrained_model": "../stable-audio-open-1.0",
    "training": {
        "batch_size": 4,
        "lr": 1e-4,
        "num_epochs": 100,
        "save_steps": 400,
        "val_steps": 400,
        "resume_from_checkpoint": null,
        "latent_seq_len": 256,
        "mixed_precision": "fp16"
    },
    "model": {
        "mse_weight": 0.1,
        "spectral_weight": 2.0
    },
    "validation": {
        "instruments": [
            "cello",
            "violin",
            "trumpet",
            "double bass",
            "guitar"
        ],
        "num_val_batches": 16
    }
}